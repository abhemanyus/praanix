---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div class="flex items-center justify-center w-full h-full p-6 bg-base-200">
    <div class="w-full max-w-5xl bg-base-100 shadow-xl rounded-2xl p-6">
      <!-- Calendar Header -->
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-3">
          <div class="join">
            <button class="btn btn-sm join-item">◀</button>
            <button class="btn btn-sm join-item">▶</button>
          </div>
          <h2 class="text-lg font-semibold">September 2025</h2>
        </div>
        <div class="text-sm text-base-content/70">
          Meetings • Week start: Mon
        </div>
      </div>

      <!-- Weekday labels -->
      <div class="grid grid-cols-7 text-center text-xs font-medium text-base-content/70 mb-2">
        <div>Mon</div>
        <div>Tue</div>
        <div>Wed</div>
        <div>Thu</div>
        <div>Fri</div>
        <div>Sat</div>
        <div>Sun</div>
      </div>

      <!-- Calendar Days -->
      <div class="grid grid-cols-7 gap-2">
        <!-- Muted days -->
        <div class="card bg-base-100/50 border border-base-300 opacity-50 min-h-24 p-2">
          <div class="text-xs font-semibold">1</div>
        </div>
        <div class="card bg-base-100/50 border border-base-300 opacity-50 min-h-24 p-2">
          <div class="text-xs font-semibold">2</div>
        </div>

        <!-- Regular days -->
        <div class="card bg-base-100 border border-base-300 min-h-24 p-2">
          <div class="text-xs font-semibold">3</div>
        </div>
        <div class="card bg-base-100 border border-base-300 min-h-24 p-2">
          <div class="text-xs font-semibold">4</div>
        </div>
        <div class="card bg-base-100 border border-base-300 min-h-24 p-2">
          <div class="text-xs font-semibold">5</div>
        </div>

        <!-- Day with meeting -->
        <div class="relative card bg-base-100 border border-base-300 min-h-24 p-2">
          <div class="text-xs font-semibold">6</div>
          <div class="mt-2 space-y-2">
            <div class="flex items-start gap-2 p-2 rounded-lg border border-primary/20 bg-primary/10 hover:shadow-lg transition">
              <div class="avatar placeholder">
                <div class="w-9 h-9 bg-primary text-primary-content rounded-md text-xs font-bold flex items-center justify-center">JS</div>
              </div>
              <div class="flex flex-col gap-1 text-xs">
                <div class="font-semibold">Health Check</div>
                <div class="text-base-content/70">10:00 — 11:00 • Video</div>
                <span class="badge badge-primary badge-sm">Join Call</span>
              </div>
            </div>
          </div>
          <!-- Dot indicator -->
          <div class="absolute top-2 right-2 w-2 h-2 rounded-full bg-primary shadow"></div>
        </div>

        <div class="card bg-base-100 border border-base-300 min-h-24 p-2">
          <div class="text-xs font-semibold">7</div>
        </div>
        <div class="card bg-base-100 border border-base-300 min-h-24 p-2">
          <div class="text-xs font-semibold">8</div>
        </div>
        <div class="card bg-base-100 border border-base-300 min-h-24 p-2">
          <div class="text-xs font-semibold">9</div>
        </div>

        <!-- Fill remaining days -->
        {Array.from({ length: 21 }).map((_, i) => (
          <div class="card bg-base-100 border border-base-300 min-h-24 p-2">
            <div class="text-xs font-semibold">{10 + i}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>
