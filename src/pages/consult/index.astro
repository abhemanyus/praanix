---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
	<flowbox>
		<div class="calendar">
			<div class="cal-head">
				<div class="month">
					<div class="nav">
						<div class="btn" title="Prev">◀</div>
						<div class="btn" title="Next">▶</div>
					</div>
					<h2>September 2025</h2>
				</div>
				<div class="controls" style="color:var(--color-muted);font-size:13px">
					Meetings • Week start: Mon
				</div>
			</div>

			<div class="weekdays">
				<div>Mon</div>
				<div>Tue</div>
				<div>Wed</div>
				<div>Thu</div>
				<div>Fri</div>
				<div>Sat</div>
				<div>Sun</div>
			</div>

			<div class="days">
				<!-- previous month's tail (muted) -->
				<div class="day day--muted"><div class="date">1</div></div>
				<div class="day day--muted"><div class="date">2</div></div>

				<!-- start of month -->
				<div class="day"><div class="date">3</div></div>
				<div class="day"><div class="date">4</div></div>
				<div class="day"><div class="date">5</div></div>

				<!-- Day with meeting card -->
				<div class="day">
					<div class="date">6</div>
					<div class="slot">
						<article class="meeting" aria-label="Team sync — 10:00 AM">
							<div class="avatar">JS</div>
							<div class="m-info">
								<div class="m-title">Health Check</div>
								<div class="m-meta">10:00 — 11:00 • Video</div>
								<div class="m-tag">Join Call</div>
							</div>
						</article>
					</div>
					<div class="dot" aria-hidden="true"></div>
				</div>

				<div class="day"><div class="date">7</div></div>
				<div class="day"><div class="date">8</div></div>
				<div class="day"><div class="date">9</div></div>

				<!-- more days to fill the grid -->
				<div class="day"><div class="date">10</div></div>
				<div class="day"><div class="date">11</div></div>
				<div class="day"><div class="date">12</div></div>
				<div class="day"><div class="date">13</div></div>
				<div class="day"><div class="date">14</div></div>
				<div class="day"><div class="date">15</div></div>
				<div class="day"><div class="date">16</div></div>

				<div class="day"><div class="date">17</div></div>
				<div class="day"><div class="date">18</div></div>
				<div class="day"><div class="date">19</div></div>
				<div class="day"><div class="date">20</div></div>
				<div class="day"><div class="date">21</div></div>
				<div class="day"><div class="date">22</div></div>
				<div class="day"><div class="date">23</div></div>

				<div class="day"><div class="date">24</div></div>
				<div class="day"><div class="date">25</div></div>
				<div class="day"><div class="date">26</div></div>
				<div class="day"><div class="date">27</div></div>
				<div class="day"><div class="date">28</div></div>
				<div class="day"><div class="date">29</div></div>
				<div class="day"><div class="date">30</div></div>
			</div>
		</div>
	</flowbox>
</Layout>

<style>
	flowbox {
		margin: 0;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: var(--color-bg);
		color: var(--color-fg);
		padding: var(--space-lg);
		box-sizing: border-box;
		width: 100%;
		height: 100%;
	}
	.calendar {
		width: 100%;
		max-width: 920px;
		background: linear-gradient(
			180deg,
			rgba(255, 255, 255, 0.02),
			rgba(255, 255, 255, 0.01)
		);
		border-radius: var(--radius-lg);
		padding: var(--space-lg);
		box-shadow:
			0 6px 30px rgba(2, 6, 23, 0.6),
			inset 0 1px 0 rgba(255, 255, 255, 0.02);
		backface-visibility: hidden;
	}
	.cal-head {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 12px;
		margin-bottom: 14px;
	}
	.month {
		display: flex;
		gap: 12px;
		align-items: center;
	}

	.month h2 {
		margin: 0;
		font-size: 20px;
		letter-spacing: -0.2px;
	}

	.nav {
		display: flex;
		gap: 8px;
	}

	.btn {
		--size: 36px;
		width: var(--size);
		height: var(--size);
		display: inline-grid;
		place-items: center;
		border-radius: 10px;
		background: var(--glass);
		color: var(--color-muted);
		border: 1px solid rgba(255, 255, 255, 0.02);
		cursor: default; /* static demo */
	}

	/* Weekday labels */
	.weekdays {
		display: grid;
		grid-template-columns: repeat(7, 1fr);
		gap: 6px;
		color: var(--color-muted);
		font-size: 13px;
		margin-bottom: 8px;
	}

	/* Calendar grid */
	.days {
		display: grid;
		grid-template-columns: repeat(7, 1fr);
		gap: var(--space-md);
	}
	.day {
		background: linear-gradient(
			180deg,
			rgba(255, 255, 255, 0.01),
			rgba(255, 255, 255, 0)
		);
		border-radius: 12px;
		min-height: 92px;
		padding: 10px;
		position: relative;
		overflow: visible;
		border: 1px solid var(--color-fg);
	}

	.day--muted {
		opacity: 0.45;
	}

	.date {
		font-weight: 600;
		font-size: 13px;
		color: var(--color-fg);
	}

	.day .slot {
		margin-top: 8px;
		display: flex;
		flex-direction: column;
		gap: 6px;
	}

	/* Meeting card inside a day box */
	.meeting {
		display: flex;
		align-items: flex-start;
		gap: 10px;
		background: linear-gradient(
			180deg,
			rgba(124, 58, 237, 0.12),
			rgba(124, 58, 237, 0.06)
		);
		border: 1px solid rgba(124, 58, 237, 0.18);
		padding: 8px 10px;
		border-radius: 10px;
		color: var(--color-fg);
		font-size: 13px;
		box-shadow: 0 6px 18px rgba(124, 58, 237, 0.08);
		width: 220px;
		transform-origin: left top;
		transition:
			transform 0.18s ease,
			box-shadow 0.18s ease;
		cursor: default;
	}
	.meeting:hover {
		transform: translateY(-6px) scale(1.02);
		box-shadow: 0 18px 40px rgba(124, 58, 237, 0.14);
	}

	.avatar {
		width: 36px;
		height: 36px;
		border-radius: 8px;
		background: linear-gradient(
			180deg,
			var(--color-accent),
			var(--color-accent-2)
		);
		display: grid;
		place-items: center;
		font-weight: 700;
		font-size: 13px;
		color: var(--color-fg);
		flex: 0 0 36px;
	}

	.m-info {
		display: flex;
		flex-direction: column;
		gap: 4px;
	}
	.m-title {
		font-weight: 700;
		font-size: 13px;
	}
	.m-meta {
		font-size: 12px;
		color: var(--color-fg);
	}
	.m-tag {
		font-size: 11px;
		color: var(--color-accent);
		background: rgba(124, 58, 237, 0.06);
		padding: 3px 6px;
		border-radius: 999px;
	}

	/* small dot indicator top-right */
	.day .dot {
		position: absolute;
		right: 8px;
		top: 8px;
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background: linear-gradient(
			180deg,
			var(--color-accent),
			var(--color-accent-2)
		);
		box-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
	}

	/* responsive tweaks */
	@media (max-width: 640px) {
		.calendar {
			padding: 14px;
		}
		.meeting {
			width: 100%;
		}
		.day {
			min-height: 84px;
			padding: 8px;
		}
	}
</style>
