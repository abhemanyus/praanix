---
import Layout from "@/layouts/Layout.astro";
import doctor from "@/assets/doctor.svg";
import you from "@/assets/you.svg";
---

<Layout>
	<div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4 w-full h-full">
		<!-- Video area -->
		<div class="relative col-span-2 w-full h-full">
			<!-- Caller (main video) -->
			<div class="card bg-base-100 shadow-md w-full h-full">
				<div class="indicator w-full h-full flex items-center justify-center">
					<span class="indicator-item badge badge-error top-4 right-4"></span>
					<img
						src={doctor.src}
						alt="Doctor video"
						class="object-contain w-4/5 h-4/5"
					/>
				</div>
			</div>

			<!-- Callee (small overlay video) -->
			<div class="absolute bottom-4 right-4 w-1/4 h-1/4 z-10">
				<div class="card bg-base-100 shadow-lg w-full h-full">
					<div class="indicator w-full h-full flex items-center justify-center">
						<span class="indicator-item badge badge-success top-4 right-4"
						></span>
						<img
							src={you.src}
							alt="Your video"
							class="object-contain w-4/5 h-4/5"
						/>
					</div>
				</div>
			</div>
		</div>

		<!-- Chat area -->
		<div class="card bg-base-100 shadow-md w-full h-full">
			<div class="card-body flex flex-col gap-4">
				<h2 class="card-title justify-end">Chat</h2>
				<div class="flex-1 overflow-y-auto space-y-3">
					<div class="chat chat-start">
						<div class="chat-bubble">
							Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin
						</div>
					</div>
					<div class="chat chat-end">
						<div class="chat-bubble">
							Donec efficitur ultrices sapien, a varius est blandit non. Integer
						</div>
					</div>
					<div class="chat chat-start">
						<div class="chat-bubble">
							Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin
						</div>
					</div>
					<div class="chat chat-end">
						<div class="chat-bubble">
							Donec efficitur ultrices sapien, a varius est blandit non. Integer
						</div>
					</div>
				</div>
				<div class="form-control">
					<input
						type="text"
						name="message"
						placeholder="Your message"
						class="input input-bordered w-full"
					/>
				</div>
			</div>
		</div>
	</div>
</Layout>
