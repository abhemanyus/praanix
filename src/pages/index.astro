---
import Layout from "@/layouts/Layout.astro";
import doctor from "@/assets/doctor.svg";
import prescription from "@/assets/prescription.svg";
import selfcheck from "@/assets/selfcheck.svg";
import pharmacy from "@/assets/pharmacy.svg";
import docfinder from "@/assets/docfinder.svg";
import you from "@/assets/you.svg";
import { getAbsoluteUrl } from "@/utils/url";
---

<Layout>
  <div class="flex p-4 w-full h-full flex-col md:flex-row gap-6">
    <!-- Left: Main Menu -->
    <div class="grid md:grid-cols-3 md:grid-rows-2 gap-4 w-full">
      <a href={getAbsoluteUrl("consult")} class="card bg-base-100 shadow-md card-bordered">
        <div class="card-body items-center text-center">
          <h2 class="card-title">Consult</h2>
          <img src={doctor.src} alt="Consult doctor" class="w-20 h-20 object-contain" />
        </div>
      </a>

      <a href={getAbsoluteUrl("prescription")} class="card bg-base-100 shadow-md card-bordered">
        <div class="card-body items-center text-center">
          <h2 class="card-title">Prescriptions</h2>
          <img src={prescription.src} alt="Prescriptions" class="w-20 h-20 object-contain" />
        </div>
      </a>

      <a href={getAbsoluteUrl("selfcheck")} class="card bg-base-100 shadow-md card-bordered">
        <div class="card-body items-center text-center">
          <h2 class="card-title">Self-Check</h2>
          <img src={selfcheck.src} alt="Self check" class="w-20 h-20 object-contain" />
        </div>
      </a>

      <a href={getAbsoluteUrl("pharmacy")} class="card bg-base-100 shadow-md card-bordered">
        <div class="card-body items-center text-center">
          <h2 class="card-title">Pharmacy</h2>
          <img src={pharmacy.src} alt="Pharmacy" class="w-20 h-20 object-contain" />
        </div>
      </a>

      <a href={getAbsoluteUrl("docfinder")} class="card bg-base-100 shadow-md card-bordered">
        <div class="card-body items-center text-center">
          <h2 class="card-title">Doc-Finder</h2>
          <img src={docfinder.src} alt="Find doctors" class="w-20 h-20 object-contain" />
        </div>
      </a>

      <a href={getAbsoluteUrl("you")} class="card bg-base-100 shadow-md card-bordered">
        <div class="card-body items-center text-center">
          <h2 class="card-title">You</h2>
          <img src={you.src} alt="User profile" class="w-20 h-20 object-contain" />
        </div>
      </a>
    </div>

    <!-- Divider -->
    <div class="divider md:divider-horizontal"></div>

    <!-- Right: Notifications -->
    <div class="card bg-base-100 shadow-lg w-full md:w-1/3 card-bordered">
      <div class="card-body">
        <h2 class="card-title">Notifications</h2>
        <div class="flex flex-col gap-4">
          <div class="card bg-base-200 card-sm card-bordered">
            <div class="card-body p-4">
              <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin
                scelerisque nulla non ligula cursus.
              </p>
            </div>
          </div>

          <div class="card bg-base-200 card-sm card-bordered">
            <div class="card-body p-4">
              <p>
                Donec efficitur ultrices sapien, a varius est blandit non. Integer
                sodales risus sed ligula tristique.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
