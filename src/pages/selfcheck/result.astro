---
import Layout from "@/layouts/Layout.astro";
import doctor from "@/assets/doctor.svg";
---

<Layout>
	<div class="container mx-auto p-4 space-y-8">
		<!-- Disease List + Detailed View (Responsive Grid) -->
		<section class="grid grid-cols-1 lg:grid-cols-2 gap-6">
			<!-- Disease Prediction List -->
			<div>
				<h2 class="text-xl font-bold mb-4">Possible Conditions</h2>
				<div class="space-y-4">
					<div class="card bg-base-100 shadow-md">
						<div class="card-body">
							<h3 class="card-title">Common Cold</h3>
							<progress
								class="progress progress-primary w-full"
								value="70"
								max="100"></progress>
						</div>
					</div>
					<div class="card bg-base-100 shadow-md">
						<div class="card-body">
							<h3 class="card-title">Influenza</h3>
							<progress
								class="progress progress-primary w-full"
								value="50"
								max="100"></progress>
						</div>
					</div>
					<div class="card bg-base-100 shadow-md">
						<div class="card-body">
							<h3 class="card-title">Allergic Rhinitis</h3>
							<progress
								class="progress progress-primary w-full"
								value="40"
								max="100"></progress>
						</div>
					</div>
				</div>
			</div>

			<!-- Detailed Disease View -->
			<div>
				<h2 class="text-xl font-bold mb-4">Condition Details</h2>
				<div class="card bg-base-100 shadow-lg">
					<div class="card-body space-y-4">
						<h3 class="card-title">Common Cold</h3>
						<div class="flex flex-col md:flex-row gap-4 items-start">
							<img
								src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d9/Rhinovirus_isosurface.png/960px-Rhinovirus_isosurface.png"
								alt="Condition"
								class="rounded-lg w-full md:w-1/3 object-cover"
							/>
							<p class="text-sm md:text-base">
								The common cold is a viral infection of your nose and throat
								(upper respiratory tract). It's usually harmless, although it
								might not feel that way.
							</p>
						</div>
						<div class="space-y-2">
							<h4 class="font-semibold">Causes</h4>
							<ul class="list-disc list-inside text-sm md:text-base">
								<li>Rhinovirus infection</li>
								<li>Close contact with infected individuals</li>
							</ul>
						</div>
						<div class="space-y-2">
							<h4 class="font-semibold">Symptoms</h4>
							<ul class="list-disc list-inside text-sm md:text-base">
								<li>Runny or stuffy nose</li>
								<li>Sore throat</li>
								<li>Cough</li>
								<li>Sneezing</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Arrange Consultation Form -->
		<section>
			<h2 class="text-xl font-bold mb-4">Consult a Doctor</h2>
			<div class="card bg-base-100 shadow-lg">
				<div class="card-body space-y-4">
					<div class="flex items-center gap-4">
						<div class="avatar">
							<div
								class="w-16 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
							>
								<img src={doctor.src} alt="Doctor Avatar" />
							</div>
						</div>
						<input
							type="text"
							placeholder="Describe your symptoms..."
							class="input input-bordered w-full"
						/>
					</div>
					<button class="btn btn-primary w-full text-lg"
						>Arrange a Consultation</button
					>
				</div>
			</div>
		</section>

		<!-- Specialists Near You -->
		<section>
			<h2 class="text-xl font-bold mb-4">Specialists Near You</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
				<div class="card bg-base-100 shadow-md">
					<div class="card-body flex items-center gap-4">
						<div class="avatar">
							<div class="w-16 rounded-full">
								<img src={doctor.src} alt="Doctor" />
							</div>
						</div>
						<div>
							<h3 class="font-bold">Dr. Sarah Johnson</h3>
							<p class="text-sm">General Practitioner • 5 miles away</p>
						</div>
					</div>
				</div>
				<div class="card bg-base-100 shadow-md">
					<div class="card-body flex items-center gap-4">
						<div class="avatar">
							<div class="w-16 rounded-full">
								<img src={doctor.src} alt="Doctor" />
							</div>
						</div>
						<div>
							<h3 class="font-bold">Dr. Michael Lee</h3>
							<p class="text-sm">ENT Specialist • 3 miles away</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</Layout>
