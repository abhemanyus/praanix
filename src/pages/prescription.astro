---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
	<div class="flex flex-col items-center p-6 w-full">
		<div class="grid gap-6 w-full md:w-4/5">
			<!-- Prescription Card -->
			<div class="card bg-base-100 shadow-md">
				<div class="card-body grid grid-cols-2 gap-4 text-center">
					<h3 class="col-span-2 card-title justify-center">Prednisone</h3>
					<p class="badge badge-outline">Two 20mg tablets</p>
					<p class="badge badge-secondary">Before meal</p>
					<label
						class="form-control col-span-2 flex items-center justify-center gap-2"
					>
						<span>Taken?</span>
						<input type="checkbox" class="checkbox checkbox-primary" />
					</label>
					<span class="col-span-2 badge badge-accent">6AM → 7AM</span>
				</div>
