---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
	<div class="events">
		<div class="prescription">
			<h3 class="medication">Prednisone</h3>
			<p class="dosage">Two 20mg tablets</p>
			<p class="instruction">Before meal</p>
			<label class="taken">Taken? <input class="taken" type="checkbox" /></label
			>
			<span class="time">6AM->7AM</span>
		</div>
		<div class="prescription">
			<h3 class="medication">Prednisone</h3>
			<p class="dosage">Two 20mg tablets</p>
			<p class="instruction">Before meal</p>
			<label class="taken">Taken? <input class="taken" type="checkbox" /></label
			>
			<span class="time">6AM->7AM</span>
		</div>
		<div class="prescription">
			<h3 class="medication">Prednisone</h3>
			<p class="dosage">Two 20mg tablets</p>
			<p class="instruction">Before meal</p>
			<label class="taken">Taken? <input class="taken" type="checkbox" /></label
			>
			<span class="time">6AM->7AM</span>
		</div>
	</div>
</Layout>

<style>
	.events {
		display: flex;
		flex-direction: column;
		justify-content: center;
		text-align: center;
		align-items: center;
		padding: var(--space-lg);
		background: var(--color-bg);
		border-radius: var(--radius-sm);
		box-shadow: var(--shadow-md);
		width: fit-content;
		margin: 0 auto;
	}

	.prescription {
		position: relative;
		display: grid;
		text-align: center;
		grid-template-columns: 1fr 1fr;
		grid-template-rows: 1fr 1fr;
		padding: var(--space-sm);
		gap: var(--space-sm);
		background: var(--color-bg);
		border-radius: var(--radius-sm);
		box-shadow: var(--shadow-md);
		width: fit-content;
		margin: var(--space-md) 0;

		& > * {
			margin: var(--space-sm);
			padding: var(--space-xs);
			border: 2px solid var(--color-border);
			border-radius: var(--radius-md);
		}

		& > .time {
			grid-column: 1/3;
		}
	}

	/* Desktop layout */
	@media (min-width: 768px) {
		.events {
			width: 80%;
		}

		.prescription {
			grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		}
	}
</style>
